{
  "name": "g-engine-api",
  "version": "0.1.1",
  "description": "TypeScript клиент для G-Engine API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "npx serve docs"
  },
  "keywords": [
    "g-engine",
    "api",
    "client",
    "typescript"
  ],
  "author": "yakoshiq",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yakoshiq/g-engine-nodejs-lib.git"
  },
  "bugs": {
    "url": "https://github.com/yakoshiq/g-engine-nodejs-lib/issues"
  },
  "homepage": "https://github.com/yakoshiq/g-engine-nodejs-lib#readme",
  "dependencies": {
    "axios": "^1.8.1",
    "g-engine-api": "file:"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-jsdoc": "^50.6.3",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.2",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.9",
    "typedoc-plugin-markdown": "^4.4.2",
    "typescript": "^5.8.2"
  },
  "files": [
    "dist/**/*"
  ]
}
